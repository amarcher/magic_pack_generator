<div class='row pool'>
	<%= render 'controls' %>
	<% @pool.packs.each do |pack| %>
		<% pack.cards.each do |card| %>
			<li class='card col span_1 <%= " foil" if (card.foil) %>'>
				<img src='<%= card.image_url %>' class='' />
			</li>
		<% end %>
	<% end %>
</div>

<div class='row build' id='build_1'>
	<%= render 'controls' %>
	<div class='col span_9 main_deck' id='main_1'>
	</div>
	<div class='col span_3 sideboard' id='side_1'>
	</div>
</div>